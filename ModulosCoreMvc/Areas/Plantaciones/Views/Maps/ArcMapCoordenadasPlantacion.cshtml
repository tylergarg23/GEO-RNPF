@section style_header{
    <style>
        #canvas {
            height: 750px;
            width: 100%;
            margin: 0;
            padding: 0;
            font-family: sans-serif;
        }

        .panel-container {
            position: relative;
            width: 100%;
            height: 100%;
        }

        #layerToggle {
            top: 20px;
            right: 20px;
            position: absolute;
            z-index: 99;
            background-color: white;
            border-radius: 8px;
            padding: 10px;
            opacity: 0.75;
            width:250px;
        }


        .panel-result {
            cursor: pointer;
            margin: 2px 0;
            background-color: rgba(0, 0, 0, 0.3);
        }

            .panel-result:hover,
            .panel-result:focus {
                color: orange;
                background-color: rgba(0, 0, 0, 0.75);
            }
        #resulEvaluacion {
            text-align: left;
        }
        .verde{
            color:forestgreen;
        }
        .rojo{
            color:orangered;
        }
    </style>
}
<h3>@Model.Id (N° cert. @Model.NumeroCertificado ) <small>&nbsp;(<label id="numBloquesLabel">0</label> Bloques/predios registrados</small>)</h3>
<input type="hidden" id="PlantacionId" value="@Model.Id" />

