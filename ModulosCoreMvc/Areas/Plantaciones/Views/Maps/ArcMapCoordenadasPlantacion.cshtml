                                            </tr>
                                            <tr>
                                                <th><strong>Nombre de Zona</strong></th>
                                                <td>@Model.NombreZona</td>
                                            </tr>
                                            <tr>
                                                <th><strong>Distrito</strong></th>
                                                <td>@Model.Distrito</td>
                                            </tr>
                                            <tr>
                                                <th><strong>Provincia</strong></th>
                                                <td>@Model.Provincia</td>
